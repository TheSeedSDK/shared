{
  "name": "the-seed-sdk/shared",
  "description": "The Seed SDK shared package.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Unay Santisteban",
      "email": "usantisteban@othercode.es"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ramsey/uuid": "^4.0",
    "othercode/complex-heart": "dev-develop",
    "psr/container": "^1.0",
    "pimple/pimple": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "mockery/mockery": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "TheSeed\\Shared\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml --testdox",
    "test-cov": "phpunit --configuration phpunit.xml --testdox --coverage-html coverage/"
  }
}
